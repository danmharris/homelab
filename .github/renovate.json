{
    "extends": [
        "config:recommended",
        ":semanticCommits",
        "helpers:pinGitHubActionDigests",
        "docker:pinDigests"
    ],
    "flux": {
        "fileMatch": ["kubernetes/.+\\.ya?ml$"]
    },
    "helm-values": {
        "fileMatch": ["kubernetes/.+\\.ya?ml$"]
    },
    "kubernetes": {
        "fileMatch": ["kubernetes/.+\\.ya?ml$"]
    },
    "packageRules": [
        {
            "matchPackagePrefixes": ["gitea.cluster.dnhrrs.xyz"],
            "enabled": false
        },
        {
            "matchDatasources": ["pypi"],
            "matchUpdateTypes": ["minor", "patch"],
            "groupName": "ansible dependencies (non-major)",
            "groupSlug": "ansible-dependencies",
            "automerge": true,
            "ignoreTests": true
        },
        {
            "matchDatasources": ["helm"],
            "matchPackageNames": [
                "kube-prometheus-stack"
            ],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "ignoreTests": true
        },
        {
            "matchDepTypes": ["action"],
            "matchUpdateTypes": ["minor", "patch"],
            "automerge": true,
            "ignoreTests": true
        }
    ],
    "customManagers": [
        {
            "customType": "regex",
            "description": "Apply an explicit gitea digest field match",
            "fileMatch": ["helm-release\\.ya?ml"],
            "matchStrings": ["(?<depName>gitea\\/gitea)\\n(?<indentation>\\s+)tag: (?<currentValue>[^@].*?)\\n\\s+digest: (?<currentDigest>sha256:[a-f0-9]+)"],
            "datasourceTemplate": "docker",
            "autoReplaceStringTemplate": "{{depName}}\n{{indentation}}tag: {{newValue}}\n{{indentation}}digest: {{#if newDigest}}{{{newDigest}}}{{else}}{{{currentDigest}}}{{/if}}"
        }
    ]
}
