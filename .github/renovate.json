{
    "extends": [
        "config:recommended",
        ":semanticCommits",
        "helpers:pinGitHubActionDigests",
        "docker:pinDigests"
    ],
    "ignorePaths": [
        "kubernetes/archive/**"
    ],
    "flux": {
        "managerFilePatterns": [
            "/kubernetes/.+\\.ya?ml$/"
        ],
        "enabled": false
    },
    "helm-values": {
        "managerFilePatterns": [
            "/kubernetes/.+\\.ya?ml$/"
        ],
        "enabled": false
    },
    "kubernetes": {
        "managerFilePatterns": [
            "/kubernetes/.+\\.ya?ml$/"
        ],
        "enabled": false
    },
    "packageRules": [
        {
            "matchPackageNames": [
                "gitea.cluster.dnhrrs.xyz/**"
            ],
            "enabled": false
        },
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "groupName": "ansible dependencies (non-major)",
            "groupSlug": "ansible-dependencies",
            "automerge": true,
            "ignoreTests": true
        },
        {
            "matchDatasources": [
                "helm"
            ],
            "matchPackageNames": [
                "kube-prometheus-stack"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "ignoreTests": true
        },
        {
            "matchDepTypes": [
                "action"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "ignoreTests": true
        },
        {
            "matchPackageNames": [
                "docker.gitea.com/gitea"
            ],
            "pinDigests": false
        }
    ]
}
